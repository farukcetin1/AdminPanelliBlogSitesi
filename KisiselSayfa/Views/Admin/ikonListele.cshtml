@using KisiselSayfa.Models.Classes
@model List<Icons>
@{
    ViewBag.Title = "ikonListele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="mt-4">İkon Sayfası</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Ikon</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td><i class="@x.icon"></i></td>
            <td><a href="/Admin/getIcon/@x.id" class="btn btn-primary">Güncelle</a></td>
            <td><a href="/Admin/deleteIcon/@x.id" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Admin/NewIcon" class="btn btn-success">İkon Ekle</a>
